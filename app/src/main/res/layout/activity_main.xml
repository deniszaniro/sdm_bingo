<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.edu.ifsp.sdm.denis.main.MainActivity">

    <TextView
        android:id="@+id/bingoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Bingo!"
        android:textSize="18sp" />

    <Button
        android:id="@+id/criarJogoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="criarJogo"
        android:text="Novo" />

    <Button
        android:id="@+id/sortearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:onClick="sortear"
        android:text="Sortear"
        android:textSize="14sp"
        android:enabled="false" />

    <TextView
        android:id="@+id/pedraLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/pedrasListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>